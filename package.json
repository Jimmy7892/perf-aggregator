{
  "name": "perf-aggregator",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/server.js",
    "start:enclave": "node dist/src/enclave-server.js",
    "migrate": "node dist/src/migrate.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:security": "jest --testPathPattern=security",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prestart": "npm run build",
    "prestart:enclave": "npm run build",
    "premigrate": "npm run build"
  },
  "dependencies": {
    "axios": "1.7.2",
    "ccxt": "4.2.25",
    "commander": "12.1.0",
    "fastify": "4.26.2",
    "ws": "8.18.0",
    "yaml": "2.4.5",
    "zod": "3.23.8",
    "pg": "^8.11.3",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/node": "20.14.10",
    "@types/ws": "8.5.10",
    "@types/pg": "^8.10.9",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "5.5.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".ts"],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    }
  }
}
